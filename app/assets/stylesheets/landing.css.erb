/* General */
.full_content_wrap {position: relative; float: left; width: 100%; text-align: center;}
.center_content_wrap {position: relative; width: 960px; margin: 0px auto; text-align: left;}

/* Gradients */
.header_gradient {background: rgb(6,165,226); /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(top,  rgba(6,165,226,1) 0%, rgba(7,133,183,1) 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(6,165,226,1)), color-stop(100%,rgba(7,133,183,1))); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  rgba(6,165,226,1) 0%,rgba(7,133,183,1) 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  rgba(6,165,226,1) 0%,rgba(7,133,183,1) 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  rgba(6,165,226,1) 0%,rgba(7,133,183,1) 100%); /* IE10+ */
background: linear-gradient(to bottom,  rgba(6,165,226,1) 0%,rgba(7,133,183,1) 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#06a5e2', endColorstr='#0785b7',GradientType=0 ); /* IE6-8 */
}

/* Box Shadows */
.shadow_1 {-webkit-box-shadow: 0 1px 5px rgba(0,0,0,0.75);-moz-box-shadow: 0 1px 5px rgba(0,0,0,0.75);box-shadow: 0 1px 5px rgba(0,0,0,0.75);}

/* Header */
#mast_header {z-index: 1;}
#hd {}
#logo {height: 46px;background: url(/assets/icon.png) 0px -1px no-repeat;padding: 15px 0px 0px 70px;position: relative;float: left;display: block;width: 100px;font-weight: 700;font-size: 26px;text-decoration: none;}

/* Banner */
#mast_banner {min-height: 420px; background: url(<%= asset_path 'clouds.png' %>); border-bottom: 2px solid #00435e;}
#banner {padding-top: 57px;}
#banner_copy {position: relative; float: left; width: 400px; color:#033649;}
#cloud_diagram {width: 500px; height: 239px; position: relative; float: right; background: url(<%= asset_path 'cloud-diagram.png' %>)}

/* CTA */
#cta {position: absolute; bottom: 0px; height: 50px; width: 100%; padding: 10px 0px; background: #00435e; background:rgba(0, 67, 94, 0.3);}
#login_button {width: 200px;float: right;margin-right: 81px;padding: 14px 0px;font-size: 23px; font-family: "ComfortaaBold";}
#cta_copy header {font-size: 24px;margin-right: 20px;}
.social_icon {width: 100px; height: 53px; position: relative; float:left;}
#cta .social_icon {margin: 0px 5px;}
#facebook_icon {background: url(<%= asset_path 'facebook.png'%>);}
#twitter_icon {background: url(<%= asset_path 'twitter.png'%>);}
#instagram_icon {background: url(<%= asset_path 'instagram.png'%>);}

/* Content Area */
#mast_bd {background: url(<%= asset_path 'gray_bg_pattern_light.png' %>) 0px 0px repeat; min-height: 340px;}
.sub_columns header {text-align: center;color: #AAA;width: 100%;padding: 20px 0px;}
.sub_columns .column header {font-size: 14px;}
.column_wrap {position: relative; float: left;border-left: 1px solid #ccc; border-right: 1px solid #fefefe;}
.column {position: relative; float: left; width: 237px; border-right: 1px solid #ccc; border-left: 1px solid #fefefe;min-height: 200px;}
.sub_columns .column ul {position: relative;float: left;padding: 0px 10px;width: 216px;text-align: center;}
.sub_columns .column ul li {list-style-position: inside;color: #AAA;padding: 5px 0px;}
#feature_columns .column_icon {width: 80px; height: 42px; margin-left: 77px;}
#feature_1 {background: url(<%= asset_path '5gb-icon.png' %>) 0px 0px no-repeat;}
#feature_2 {background: url(<%= asset_path 'social-icon.png' %>) 0px 0px no-repeat;}
#feature_3 {background: url(<%= asset_path 'dropbox-icon.png' %>) 0px 0px no-repeat;}
#feature_4 {background: url(<%= asset_path 'plus-icon.png' %>) 0px 0px no-repeat;}

#testimonial_columns .column_icon {width: 120px; height: 63px; margin-left: 53px;}
#testimonial_1 {background: url(<%= asset_path 'rich.png' %>) 0px 0px no-repeat;}
#testimonial_2 {background: url(<%= asset_path 'bob.png' %>) 0px 0px no-repeat;}
#testimonial_3 {background: url(<%= asset_path 'jason.png' %>) 0px 0px no-repeat;}
#testimonial_4 {background: url(<%= asset_path 'dee.png' %>) 0px 0px no-repeat;}
#testimonial_columns p {padding: 0px 22px 20px;color: #AAA;font-style: italic;margin: 0px;}

/* Footer */
#mast_footer {background: #0073A0;height: 30px;border-top: 1px solid #44D3FF;}
